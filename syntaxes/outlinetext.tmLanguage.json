{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OutlineText",
	"scopeName": "text.html.outlinetext",
	"patterns": [
		{
			"include": "#block"
		}
	],
	"repository": {
		"block": {
			"patterns": [
				{
					"include": "#list"
				},
				{
					"include": "#definition-list"
				},
				{
					"include": "#heading"
				},
				{
					"include": "#block-quote"
				},
				{
					"include": "#html"
				},
				{
					"include": "#code-block"
				},
				{
					"include": "#paragraph"
				}
			]
		},
		"line-continuation": {
			"match": "(\\\\)$\\n?",
			"captures": {
				"1": {
					"name": "punctuation.separator.continuation.line.outlinetext"
				}
			}
		},
		"heading": {
			"begin": "^\\s*(#)\\s+(.*?)",
			"end": "(?<!\\\\)(?<!\\n)$",
			"name": "markup.heading.outlinetext",
			"patterns": [
				{
					"include": "#inline"
				}
			]
		},
		"block-quote": {
			"begin": "(^|\\G)\\s*>>>$",
			"end": "(^|\\G)\\s*>>>$",
			"name": "markup.quote.outlinetext",
			"patterns": [
				{
					"include": "#block"
				}
			]
		},
		"code-block": {
			"begin": "(^|\\G)\\s*```",
			"end": "(^|\\G)\\s*```$",
			"name": "markup.code-block.outlinetext"
		},
		"html": {
			"patterns": [
				{
					"begin": "(^|\\G)\\s*(<!--)",
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.html"
						},
						"2": {
							"name": "punctuation.definition.comment.html"
						}
					},
					"end": "(-->)",
					"name": "comment.block.html"
				},
				{
					"begin": "(?i)(^|\\G)\\s*(?=<(script|style|pre)(\\s|$|>)(?!.*?</(script|style|pre)>))",
					"end": "(?i)(.*)((</)(script|style|pre)(>))",
					"endCaptures": {
						"1": {
							"patterns": [
								{
									"include": "text.html.derivative"
								}
							]
						},
						"2": {
							"name": "meta.tag.structure.$4.end.html"
						},
						"3": {
							"name": "punctuation.definition.tag.begin.html"
						},
						"4": {
							"name": "entity.name.tag.html"
						},
						"5": {
							"name": "punctuation.definition.tag.end.html"
						}
					},
					"patterns": [
						{
							"begin": "(\\s*|$)",
							"patterns": [
								{
									"include": "text.html.derivative"
								}
							],
							"while": "(?i)^(?!.*</(script|style|pre)>)"
						}
					]
				},
				{
					"begin": "(?i)(^|\\G)\\s*(?=</?[a-zA-Z]+[^\\s/&gt;]*(\\s|$|/?>))",
					"patterns": [
						{
							"include": "text.html.derivative"
						}
					],
					"while": "^(?!\\s*$)"
				},
				{
					"begin": "(^|\\G)\\s*(?=(<[a-zA-Z0-9\\-](/?>|\\s.*?>)|</[a-zA-Z0-9\\-]>)\\s*$)",
					"patterns": [
						{
							"include": "text.html.derivative"
						}
					],
					"while": "^(?!\\s*$)"
				}
			]
		},
		"paragraph": {
			"name": "meta.paragraph.outlinetext",
			"begin": "(^|\\G)[ ]*(?=\\S)",
			"while": "(^|\\G)[ ]*(?=\\S)",
			"patterns": [
				{
					"include": "#inline"
				}
			]
		},
		"inline": {
			"patterns": [
				{
					"include": "#strong"
				},
				{
					"include": "#emphasis"
				},
				{
					"include": "#inline-code"
				}
			]
		},
		"inline-code": {
			"match": "(`)([^`]*)(`)",
			"captures": {
				"1": {
					"name": "punctuation.definition.raw.markdown"
				},
				"3": {
					"name": "punctuation.definition.raw.markdown"
				}
			},
			"name": "markup.inline.raw.string.outlinetext"
		},
		"strong": {
			"match": "(\\*\\*)(.*?)(\\*\\*)",
			"name": "markup.bold.outlinetext",
			"captures": {
				"1": {
					"name": "punctuation.definition.bold.outlinetext"
				},
				"3": {
					"name": "punctuation.definition.bold.outlinetext"
				}
			}
		},
		"emphasis": {
			"match": "(//)(.*?)(//)",
			"name": "markup.italic.outlinetext",
			"captures": {
				"1": {
					"name": "punctuation.definition.italic.outlinetext"
				},
				"3": {
					"name": "punctuation.definition.italic.outlinetext"
				}
			}
		}
	}
}